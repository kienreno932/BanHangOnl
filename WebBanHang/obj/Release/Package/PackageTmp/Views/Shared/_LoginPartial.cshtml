@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul style="margin-top: -7px;" class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Xin chào! " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" , @class= "shop-link" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="shop-link">Đăng xuất</a></li>
    </ul>
    }
}
else
{
    <ul style="margin-top: -7px;" class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Đăng kí", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "shop-link" })</li>
        <li>@Html.ActionLink("Đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "shop-link" })</li>
    </ul>
}
